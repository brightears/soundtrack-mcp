{
  "name": "soundtrack-mcp",
  "version": "1.0.0",
  "description": "MCP server for Soundtrack Your Brand API - control music playback via Claude or ChatGPT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "soundtrack-mcp": "dist/index.js"
  },
  "scripts": {
